@model WebApp.Models.NewInsuredModel

@{
    ViewData["Title"] = "Editace pojištěnce";
}

<section>
    <div class="container mt-4">
        <h2>Editace pojištěnce @Model.Jmeno @Model.Prijmeni</h2>
        <hr />
    </div>
    <div class="container py-4">
        <div class="col-md-4 col-md-offset-4">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ID" />
                        <div class="form-group">
                            <label asp-for="Jmeno" class="control-label"></label>
                            <input asp-for="Jmeno" class="form-control" />
                            <span asp-validation-for="Jmeno" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Prijmeni" class="control-label"></label>
                            <input asp-for="Prijmeni" class="form-control" />
                            <span asp-validation-for="Prijmeni" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Telefon" class="control-label"></label>
                            <input asp-for="Telefon" class="form-control" />
                            <span asp-validation-for="Telefon" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Ulice" class="control-label"></label>
                            <input asp-for="Ulice" class="form-control" />
                            <span asp-validation-for="Ulice" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Mesto" class="control-label"></label>
                            <input asp-for="Mesto" class="form-control" />
                            <span asp-validation-for="Mesto" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PSC" class="control-label"></label>
                            <input asp-for="PSC" class="form-control" />
                            <span asp-validation-for="PSC" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <input type="submit" value="Uložit" class="btn btn-success" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

