@model WebApp.Models.AddInsuranceModel

@{
    ViewData["Title"] = "Přidat pojištění";
}

<section>
    <div class="container mt-4">
        <h2>Přidat pojištění</h2>
        <hr />
    </div>
    <div class="container py-4">
        <div class="col-md-4 col-md-offset-4">
            <form asp-action="Create">
                <div class="card">
                     <div class="card-body">
                         <div class="form-col">
                            <div class="form-group">
                                <label asp-for="TypPojisteni" class="control-label"></label>
                                <input asp-for="TypPojisteni" class="form-control" />
                                <span asp-validation-for="TypPojisteni" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-col">
                            <div class="form-group">
                                <label asp-for="Castka" class="control-label"></label>
                                <input asp-for="Castka" class="form-control" />
                                <span asp-validation-for="Castka" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-col">
                                <div class="form-group">
                                     <label asp-for="Predmet" class="control-label"></label>
                                     <input asp-for="Predmet" class="form-control" />
                                     <span asp-validation-for="Predmet" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-col">
                                <div class="form-group">
                                    <label asp-for="PlatnostOd" class="control-label"></label>
                                    <input asp-for="PlatnostOd" class="form-control" />
                                    <span asp-validation-for="PlatnostOd" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-col">
                                <div class="form-group">
                                    <label asp-for="PlatnostDo" class="control-label"></label>
                                    <input asp-for="PlatnostDo" class="form-control" />
                                    <span asp-validation-for="PlatnostDo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <br />
                            <button type="submit" class="btn btn-success">Uložit</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

